{
  "name": "website",
  "version": "0.0.1",
  "description": "Patrick O'Melveny's personal website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "npx sass --watch src/sass:src/css src/sass/critical:src/_includes/css",
    "build:sass": "npx sass src/sass:src/css src/sass/critical:src/_includes/css",
    "prod:build:sass": "npx sass src/sass:src/css src/sass/critical:src/_includes/css --style compressed --no-source-map",
    "watch:11ty": "npx @11ty/eleventy --serve",
    "build:11ty": "npx @11ty/eleventy",
    "prod:build:11ty": "npx @11ty/eleventy",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:*",
    "prod:build": "npm-run-all clean prod:build:*",
    "clean": "npx rimraf src/css/* src/_includes/css/* public/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvomelveny/website.git"
  },
  "keywords": [
    "personal website",
    "static site"
  ],
  "author": "Patrick O'Melveny",
  "license": "GNU",
  "bugs": {
    "url": "https://github.com/pvomelveny/website/issues"
  },
  "homepage": "https://github.com/pvomelveny/website#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4"
  }
}